<?xml version="1.0" encoding="UTF-8"?>
<suite name="Testathon Login Test Suite" verbose="1">
    <parameter name="browser" value="chrome"/>
    <parameter name="environment" value="browserstack"/>
    
    <test name="Login Smoke Tests" group-by-instances="true">
        <groups>
            <run>
                <include name="smoke"/>
            </run>
        </groups>
        <classes>
            <class name="tests.LoginTest">
                <methods>
                    <include name="testSuccessfulLogin"/>
                    <include name="testLogout"/>
                    <include name="testNavigationAfterLogin"/>
                </methods>
            </class>
        </classes>
    </test>
    
    <test name="Login Regression Tests" group-by-instances="true">
        <groups>
            <run>
                <include name="regression"/>
            </run>
        </groups>
        <classes>
            <class name="tests.LoginTest">
                <methods>
                    <include name="testLoginWithInvalidCredentials"/>
                    <include name="testLoginWithEmptyCredentials"/>
                    <include name="testLoginPageElements"/>
                    <include name="testLoginWithDifferentUsers"/>
                    <include name="testLoginWithLockedUser"/>
                    <include name="testLoginFormValidation"/>
                    <include name="testSessionPersistence"/>
                    <include name="testLoginDropdownFunctionality"/>
                </methods>
            </class>
        </classes>
    </test>
    
    <test name="Complete Login Test Suite" group-by-instances="true">
        <classes>
            <class name="tests.LoginTest"/>
        </classes>
    </test>
</suite>
